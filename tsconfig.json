{
  "compilerOptions": {
    "target": "ES2019",                          
    "module": "CommonJS",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "./src",
    "strict": false,       
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
  },
  "exclude": [
    "./jest.config.ts",
    "./node_modules",
    "./tests",
    "./build",
    "./uploads",
    "./coverage",
    "./doc",
    "src/scripts/firstStart.ts",
    "src/scripts/notification.ts"
  ]
}